<%- include('header') %>

    <div class="register-form">
        <div class="register">
            <h1>Register</h1>
            <div>
                <form action="/memberlist/form" method="POST">
                    <label for="name">Name:</label>
                    <input type="text" placeholder="name" id="name" name="name" required> <br>
                    <label for="email">Email:</label>
                    <input type="email" placeholder="email" id="email" name="email" required> <br>
                    <label for="phone">Phone:</label>
                    <input type="tel" placeholder="telephone" id="phone" name="phone" required> <br>
                    <label for="message">Message:</label><br>
                    <textarea placeholder="Write something here" id="message" name="message" required></textarea> <br>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('footer') %>