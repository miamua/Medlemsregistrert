<%- include('header') %>
    <div class="memberInfo">
        <h1>
            <%= name %>
        </h1>

        <h3>
            <%= email %>
        </h3>
        <p>
            <b>Telephone number:</b> <%= phone %>
        </p>
        <p>
            <b>Member since:</b> <%= created_at %>
        </p>
        <p> <b>Message:</b>
            <%= message %>
        </p>
        <div class="buttons">
            <form action="/memberpage/<%= id %>/delete" method="post">
                <button class="styledBtn">remove</button>
            </form>
            <form action="/memberpage/<%=id %>/edit" method="get">
                <button class="styledBtn">edit</button>
            </form>
        </div>

    </div>

    <%- include('footer') %>